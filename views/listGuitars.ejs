<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guitar Store</title>
    <link rel="stylesheet" href="stylesheets/style.css">
  </head>
  <body>
    <h1>Guitar Store</h1>
    <p>Welcome</p>
    <table>
      <tr>
        <th>ID</th>
        <th>Maker</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
        <th># in stock</th>
      </tr>
      <% listGuitars.forEach(guitar => { %>
      <tr>
        <td><%= guitar.id%></td>
        <td><%= guitar.maker%></td>
        <td><%= guitar.model %></td>
        <td><%= guitar.year %></td>
        <td>US$ <%=guitar.price %></td>
        <td><%=guitar.stock %></td>
      </tr>
      <% }) %>
    </table>
    <br />
    <form action="/guitarSelection" method="post">
      Finda a guitar: <input type="text" name="id" />
      <button type="submit">Find</button>
    </form>
    or
    <a href="/guitars/add">Add new guitar</a>
  </body>
</html>
